<?xml version="1.0" encoding="utf-8"?>
<com.wanghaisheng.template_lib.widget.pulltorefresh.TwitterRefreshHeaderView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_grey">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/refresh_header_height_twitter"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvRefresh"
            android:background="@drawable/icon_pull_down" />

        <ImageView
            android:id="@+id/ivSuccess"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvRefresh"
            android:background="@drawable/icon_refresh_ok" />

        <ProgressBar
            android:id="@+id/progressbar"
            style="@style/progressbar_loading_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tvRefresh" />

        <TextView
            android:id="@+id/tvRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="加载中。。"
            android:textColor="@color/primary_font_color" />
    </RelativeLayout>
</com.wanghaisheng.template_lib.widget.pulltorefresh.TwitterRefreshHeaderView>