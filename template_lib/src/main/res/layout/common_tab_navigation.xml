<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/tab_close_icon"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/main_padding"
            android:layout_marginRight="@dimen/main_padding"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimary"
            android:visibility="gone"/>
        <com.ogaclejapan.smarttablayout.SmartTabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_height"
            android:background="@color/colorPrimary"
            android:layout_toLeftOf="@+id/btn_more"
            android:layout_toStartOf="@+id/btn_more"
            android:layout_toRightOf="@+id/btn_close"
            android:layout_toEndOf="@+id/btn_close"
            app:stl_dividerColor="@color/colorPrimary"
            app:stl_defaultTabTextHorizontalPadding="10dp"
            app:stl_customTabTextLayoutId="@layout/common_custom_tab"
            app:stl_customTabTextViewId="@id/custom_text"
            app:stl_titleOffset="auto_center"
            app:stl_indicatorColor="@color/white"
            app:stl_indicatorCornerRadius="1.5dp"
            app:stl_indicatorInterpolation="smart"
            app:stl_indicatorThickness="2dp"
            app:stl_indicatorWidth="auto"
            app:stl_indicatorWithoutPadding="true" />
        <ImageView
            android:id="@+id/btn_more"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/tab_more_icon"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/main_padding"
            android:layout_marginRight="@dimen/main_padding"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimary"
            android:visibility="gone"/>
    </RelativeLayout>
    <ViewStub
        android:id="@+id/viewstub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/viewstub_viewpager"
        android:background="@color/colorPrimary"/>
</LinearLayout>
